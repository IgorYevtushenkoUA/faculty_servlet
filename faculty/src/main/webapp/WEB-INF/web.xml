<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>com.example.faculty.filter.LocaleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.example.faculty.filter.AuthorizationFilter</filter-class>
        <init-param>
            <param-name>ROLE_ADMIN</param-name>
            <param-value>
                admin
                courses
                course
                logout
                course-create
                teacher-create
                student-create
                teachers
                students
                course-edit
                teacher-edit
                student-edit
                error
            </param-value>
        </init-param>
        <init-param>
            <param-name>ROLE_TEACHER</param-name>
            <param-value>
                teacher
                teacher-course
                courses
                course
                logout
                error
            </param-value>
        </init-param>
        <init-param>
            <param-name>ROLE_STUDENT</param-name>
            <param-value>
                student
                courses
                course
                logout
                error
            </param-value>
        </init-param>
        <init-param>
            <param-name>ROLE_GUEST</param-name>
            <param-value>
                controller
                language
                login
                register
                courses
                course
                error
            </param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <servlet-name>controller</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>com.example.faculty.filter.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>

</web-app>