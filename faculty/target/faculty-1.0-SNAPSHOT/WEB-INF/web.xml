    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.example.faculty.filter.AuthorizationFilter</filter-class>
        <init-param>
            <param-name>ROLE_ADMIN</param-name>
            <param-value>
                admin
                add-course
                add-teacher
                edit-course
                list-users
                list-courses
                block-student
                unblock-student
                courses
                course
                logout
            </param-value>
        </init-param>
        <init-param>
            <param-name>ROLE_TEACHER</param-name>
            <param-value>
                teacher
                courses
                course
                logout
            </param-value>
        </init-param>
        <init-param>
            <param-name>ROLE_STUDENT</param-name>
            <param-value>
                student
                courses
                course
                logout
            </param-value>
        </init-param>
        <init-param>
            <param-name>ROLE_GUEST</param-name>
            <param-value>
                controller
                language
                login
                register
                courses
                course
            </param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <servlet-name>controller</servlet-name>
    </filter-mapping>

</web-app>